# }

# ctemplin customizations
bindcode 160 exec i3lock
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

bindsym $mod+Ctrl+Mod1+Left move workspace to output left
bindsym $mod+Ctrl+Mod1+Right move workspace to output right

bindsym $mod+B border toggle

# Volume controls
bindsym XF86AudioLowerVolume exec alsa_master_down.sh
bindsym XF86AudioRaiseVolume exec alsa_master_up.sh
# Mic Level
bindsym Shift+XF86AudioLowerVolume exec alsa_capture_down.sh
bindsym Shift+XF86AudioRaiseVolume exec alsa_capture_up.sh

focus_follows_mouse no

workspace_auto_back_and_forth yes

